{
    "taskGroups": [
        {
            "taskSpec": {
                "runnables": [
                    {
                        "script": {
                            "text": "bash /mnt/share/code/runner.sh"
                        }
                    }
                ],
                "computeResource": {
                    "cpuMilli": 1000,
                    "memoryMib": 6000
                },
                "volumes": [
                    {
                        "gcs": {
                            "remotePath": "gentropy-tmp/batch-example"
                        },
                        "mountPath": "/mnt/share"
                    }
                ],
                "maxRetryCount": 1,
                "maxRunDuration": "3600s"
            },
            "taskCount": 64,
            "parallelism": 8
        }
    ],
    "allocationPolicy": {
        "instances": [
            {
                "policy": {
                    "machineType": "n2d-highmem-4",
                    "provisioningModel": "SPOT"
                }
            }
        ]
    },
    "logsPolicy": {
        "destination": "CLOUD_LOGGING"
    }
}
