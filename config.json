{
    "taskGroups": [
        {
            "taskSpec": {
                "runnables": [
                    {
                        "script": {
                            "text": "bash /mnt/share/code/runner.sh"
                        }
                    }
                ],
                "computeResource": {
                    "cpuMilli": 4000,
                    "memoryMib": 25000
                },
                "volumes": [
                    {
                        "gcs": {
                            "remotePath": "gentropy-tmp/batch-finemapping-finngen100-3mb-carma"
                        },
                        "mountPath": "/mnt/share"
                    }
                ],
                "maxRunDuration": "7200s",
                "maxRetryCount": 5,
                "lifecyclePolicies": [
                    {
                        "action": "FAIL_TASK",
                        "actionCondition": {
                            "exitCodes": [73]
                        }
                    }
                ]
            },
            "taskCount": 100,
            "parallelism": 4000
        }
    ],
    "allocationPolicy": {
        "instances": [
            {
                "policy": {
                    "machineType": "n2-highmem-4",
                    "provisioningModel": "SPOT",
                    "bootDisk": {
                        "sizeGb": 60
                    }
                }
            }
        ]
    },
    "logsPolicy": {
        "destination": "CLOUD_LOGGING"
    }
}
